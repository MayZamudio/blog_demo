<div class="container my-5 col-lg-8 col-md-8 justify-content-center">
  <h1>Editing Post</h1>

  <%= render "form", post: @post %>

  <br>

  <div class="rounded-3 d-flex mt-4" >
    <div class="btn-group">
      <%= link_to @post, class: "btn btn-outline-secondary", role: "button" do %>
      <i class="bi bi-eye"></i>
      View Post
      <% end %>
      <%= link_to posts_path, class: "btn btn-outline-secondary", role: "button" do %>
      <i class="bi bi-house-door"></i>
      Back to Posts
      <% end %>
    </div>
  </div>
</div>
